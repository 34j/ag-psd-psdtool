{
  "name": "ag-psd-psdtool",
  "type": "commonjs",
  "version": "1.1.1",
  "description": "Export PSDTool(kit)-compatible PSD files with options (visible states) changed using ag-psd.",
  "author": {
    "name": "34j"
  },
  "license": "MIT",
  "homepage": "https://github.com/34j/ag-psd-psdtool",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/34j/ag-psd-psdtool.git"
  },
  "bugs": {
    "url": "https://github.com/34j/ag-psd-psdtool/issues"
  },
  "keywords": [
    "boilerplate",
    "template",
    "typescript",
    "vitest",
    "pre-commit",
    "semantic-release",
    "typedoc"
  ],
  "main": "./dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build:watch": "tsc --watch --project tsconfig.json",
    "preinstall": "npx only-allow pnpm",
    "build": "tsc --project tsconfig.json",
    "lint": "eslint --fix",
    "typedoc": "typedoc",
    "typedoc:watch": "typedoc --watch",
    "host": "http-server test/assets",
    "test:watch": "vitest --watch --coverage --coverage.include=src",
    "test:vitest": "vitest --coverage --coverage.include=src",
    "test": "npm-run-all --parallel --race host test:vitest",
    "watch": "npm-run-all --parallel *:watch",
    "update": "npm-check-updates -u"
  },
  "dependencies": {
    "ag-psd": "^28.0.0",
    "ajv": "^8.17.1",
    "es-toolkit": "^1.34.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.11.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@tsconfig/strictest": "2.0.5",
    "@types/browser-or-node": "1.3.2",
    "@types/node": "22.14.1",
    "@typescript-eslint/eslint-plugin": "8.29.0",
    "@vitest/browser": "3.1.1",
    "@vitest/coverage-v8": "3.1.1",
    "browser-or-node": "3.0.0",
    "canvas": "3.1.0",
    "eslint": "9.23.0",
    "globals": "16.0.0",
    "http-server": "14.1.1",
    "npm-run-all2": "7.0.2",
    "playwright": "1.51.1",
    "semantic-release": "24.2.3",
    "typedoc": "0.28.1",
    "typescript": "5.8.2",
    "vitest": "3.1.1"
  },
  "typedocOptions": {
    "entryPoints": [
      "./src"
    ],
    "tsconfig": "./tsconfig.json"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "README.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
